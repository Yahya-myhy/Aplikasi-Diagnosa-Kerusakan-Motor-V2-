<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:foregroundGravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_plat_motor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PlatMotor"/>
            <TextView
                android:id="@+id/text_merk_motor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merk motor"
                />
            <TextView
                android:id="@+id/text_pemilik_motor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pemilik Motor"/>
            <TextView
                android:id="@+id/text_jeniskerusakan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kerusakan"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>